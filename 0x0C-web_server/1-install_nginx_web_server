#!/usr/bin/env bash
# Script that install nginx

if [ -x "$(command -v nginx)" ]; then
  echo "is installed.";
else
    apt update && apt install nginx -y;
fi

sed -i 's/80/8080/g' /etc/nginx/sites-enabled/default;
echo "Holberton School" > /var/www/html/index.nginx-debian.html;
service nginx start;
